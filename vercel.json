{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/search",
      "destination": "/api/search"
    },
    {
      "source": "/api/search-v2",
      "destination": "/api/search-v2"
    },
    {
      "source": "/api/tts",
      "destination": "/api/tts"
    },
    {
      "source": "/api/translate",
      "destination": "/api/translate"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
